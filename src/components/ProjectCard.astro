---
import { Icon } from 'astro-icon'
import { Image } from 'astro:assets'
const { title, description, link, image_url } = Astro.props
---

<a
  id={`${title} Card`}
  href={link}
  target='_blank'
  aria-label={`Link to ${title} website`}
  class='group bg-secondary-alt text-secondary p-6 rounded-3xl flex flex-col justify-between origin-center lg:hover:scale-[.98] transition-all duration-300 gap-1 lg:gap-2'
>
  <h3 class='text-xl lg:text-2xl font-secondary'>{title}</h3>
  <p>{description}</p>
  <Image
    src={image_url}
    alt='Be-Graphic website'
    width={500}
    height={500}
    class={'w-72 h-auto self-center'}
  />
  <div class='w-full flex flex-row justify-between overflow-hidden'>
    <ul
      class='flex flex-row gap-4 lg:translate-y-14 lg:group-hover:translate-y-0 transition-all duration-300 lg:opacity-0 lg:group-hover:opacity-100'
    >
      <slot />
    </ul>
    <Icon
      name='mdi:open-in-new'
      class='w-8 lg:group-hover:text-primary transition-colors duration-300'
    />
  </div>
</a>
